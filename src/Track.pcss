.track {
	display: inline-block;
	vertical-align: top;
	margin: 3px;
	background: rgba(255, 255, 255, 0.8);
    border-radius: 5px;
	transition: opacity 0.2s;

	&.muted {
		opacity: 0.5;
	}
}

.name {
	text-transform: uppercase;
	display: flex;
	background: #333;
	color: white;
	padding: 0 0.5em;
	font-size: 14px;
	letter-spacing: 0.05em;
	height: 26px;
	justify-content: space-between;
	align-items: center;
}

.change {
	background: #2196F3;
	color: white;
	padding: 3px;
	border-radius: 9999px;
	cursor: pointer;
	font-weight: normal;
	font-size: 12px;
}

.video-area {
	width: 320px;
	height: 180px;

	color: white;

	display: flex;
	align-items: center;
	justify-content: center;
	text-align: center;

	font-size: 48px;
	font-weight: bold;
}

.controls {
	padding: 3px;
	display: flex;
	align-items: center;
	font-size: 20px;
}

.mute {
	color: #333;
	cursor: pointer;
}

.volume {
	display: flex;
}

.volume-back {
	fill: #555;
}

.volume-color {
	fill: #2196F3;
}

.volume-pinch {
	fill: white;
	cursor: pointer;
}
